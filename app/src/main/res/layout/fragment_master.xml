<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.meteoapp.MasterFragment">


    <Button
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="równoważnik"
        android:id="@+id/equivalent_bttn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="wilgotność względna"
        android:id="@+id/humidity_bttn"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/equivalent_bttn"
        android:layout_alignStart="@+id/equivalent_bttn" />

    <Button
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="temperatura średnia"
        android:id="@+id/temperature_bttn"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/humidity_bttn"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="podstawa chmur"
        android:layout_marginTop="16dp"
        android:id="@+id/cloud_bttn"
        android:layout_below="@+id/temperature_bttn"
        android:layout_alignStart="@+id/temperature_bttn" />


</RelativeLayout>
